@* ScrumEntryModal.razor: Modal for adding/editing a work capture note or task entry *@

<div class="modal fade @(IsOpen ? "show d-block" : "")" tabindex="-1" role="dialog" aria-modal="true" style="background:rgba(0,0,0,0.5);" @onclick:stopPropagation="true" @onkeydown:escape="OnCancel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@((IsEdit ? "Edit" : "Add") + " Entry")</h5>
                <button type="button" class="btn-close" aria-label="Close" @onclick="OnCancel"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Link to Task (optional)</label>
                    <input class="form-control" placeholder="Search or select task..." @bind="TaskTitle" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Note</label>
                    <textarea class="form-control" rows="3" @bind="NoteText" autofocus></textarea>
                </div>
                @if (ShowBlockerField)
                {
                    <div class="mb-3">
                        <label class="form-label">Blocker Details/Impact</label>
                        <textarea class="form-control" rows="2" @bind="BlockerDetails"></textarea>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="OnCancel">Cancel</button>
                <button class="btn btn-primary" @onclick="OnSave">Save</button>
            </div>
        </div>
    </div>
</div>

