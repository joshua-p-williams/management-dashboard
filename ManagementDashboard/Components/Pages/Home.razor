@page "/"

<div class="container py-5">
    <h1 class="mb-4">Welcome to Management Dashboard</h1>
    <div class="row">
        <div class="col-md-6">
            <!-- Quick Actions Section -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    Quick Actions
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <button class="btn btn-primary w-100" @onclick="OnAddTaskClicked">
                            <i class="bi bi-plus-circle me-1"></i> Add Task
                        </button>
                    </div>
                    <div>
                        <button class="btn btn-info text-white w-100" @onclick="OnAddWorkCaptureClicked">
                            <i class="bi bi-pencil-square me-1"></i> Add Work Capture
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <!-- Show prioritized tasks -->
            <NextTasksList @key="nextTasksListKey" />
        </div>
    </div>
</div>
@if (showTaskEditor)
{
    <TaskEditor
        Quadrant="null"
        TaskToEdit="null"
        OnCancel="CloseTaskEditor"
        OnSaved="OnTaskSaved" />
}
@if (showWorkCaptureModal)
{
    <WorkCaptureNoteModal 
        Note="NewWorkCaptureNote"
        IsEditMode="false"
        OnCancel="HandleWorkCaptureCancel"
        OnSave="HandleWorkCaptureSave" />
}

