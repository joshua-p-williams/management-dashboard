@page "/scrum-summary"

<div class="container py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2><i class="bi bi-clipboard-check me-2"></i> Scrum Ceremony Summary</h2>
      <input type="date" class="form-control w-auto" @bind="SelectedDate" />
    </div>

    <!-- Panels (responsive row on desktop, stacked on mobile) -->
    <div class="d-flex flex-column flex-md-row gap-3 align-items-stretch">
      <div class="flex-fill d-flex">
        <ScrumQuestionPanel
          Title="Yesterday"
          Icon="bi-arrow-left-circle"
          Tooltip="What did you work on yesterday?"
          Entries="@YesterdayEntries"
          OnAdd="OnAddYesterday" />
      </div>
      <div class="flex-fill d-flex">
        <ScrumQuestionPanel
          Title="Today"
          Icon="bi-arrow-right-circle"
          Tooltip="What will you work on today?"
          Entries="@TodayEntries"
          OnAdd="OnAddToday" />
      </div>
      <div class="flex-fill d-flex">
        <ScrumQuestionPanel
          Title="Blockers"
          Icon="bi-exclamation-triangle-fill"
          Tooltip="What is blocking your progress?"
          Entries="@BlockerEntries"
          OnAdd="OnAddBlockers"
          Highlight="warning" />
      </div>
    </div>

    <ScrumEntryModal
        IsOpen="@IsModalOpen"
        IsEdit="@IsEdit"
        ShowBlockerField="@(ModalSection == "Blockers")"
        TaskTitle="@ModalTaskTitle"
        NoteText="@ModalNoteText"
        BlockerDetails="@ModalBlockerDetails"
        OnSave="@SaveModal"
        OnCancel="@CloseModal" />
</div>

<!-- All logic and properties are now in the code-behind file. -->

