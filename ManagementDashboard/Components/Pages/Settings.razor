@page "/settings"

<h3 class="mb-4"><i class="bi bi-gear me-2"></i>Settings</h3>
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h5 class="card-title mb-3">Appearance</h5>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="themeSwitch" @bind="IsDarkMode" />
            <label class="form-check-label" for="themeSwitch">
                <i class="bi @(IsDarkMode ? "bi-moon" : "bi-sun") me-1"></i>
                @(IsDarkMode ? "Dark" : "Light") Mode
            </label>
        </div>
    </div>
</div>
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h5 class="card-title mb-3">Task Settings</h5>
        <div class="mb-3 row align-items-center">
            <label class="col-sm-6 col-form-label">Due Date Reminder (days)</label>
            <div class="col-sm-6">
                <input type="number" class="form-control" min="1" max="30" @bind="DueDateReminderThresholdDays" />
            </div>
        </div>
    </div>
</div>
